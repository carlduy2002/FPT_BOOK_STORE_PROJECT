         <!-- Recent Sales -->
         <div class="col-12">
            <div class="card recent-sales overflow-auto">

               <div class="card-body">
                  @section Scripts
                     {

                     <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
                     <script src="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>

                     <script>
                        $(document).ready(function () {
                           $('#example').DataTable({
                              order: [
                                 [0, 'asc']
                              ],
                           });
                        });
                     </script>
                  }
                  <div style="text-align:center;">
                     <h1>Manage Account</h1>
                      <a asp-area="Identity"
                        asp-page="/Account/Register" id="btn-add-book"><i class="fa-solid fa-plus"></i> Create </a>
                     <table id="example" class="display" style="width:100%">
                        <thead>
                              <tr>
                                 <th>Image</th>
                                 <th>Email</th>
                                 <th>Address</th>
                                 <th>Phone</th>
                                 <th>Status</th>
                                 <th>Actions</th>
                              </tr>
                           </thead>

                           @if (Model != null)
                           {

                              @foreach (var b in Model)
                              {

                                 <tr>
                                    @if (b.Account_Image == null)
                                    {

                                       <td><img src="~/Uploads/Account_Image/default-avatar.png" alt="..."
                                             style="width: 100px; height: 100px"></td>

                                    }
                                    else
                                    {

                                       <td><img src="~/Uploads/Account_Image/@b.Account_Image" alt="..."
                                             style="width: 100px; height: 100px"></td>
                                    }
                                    <td>@b.Email</td>
                                    <td>@b.Account_Address</td>
                                    <td>@b.PhoneNumber</td>
                                    <td>@b.Account_Deleted</td>

                                    <td>
                                       @if (b.Account_Deleted != Status.Deleted.ToString())
                                       {

                                          <a asp-area="Admin" asp-controller="Account" asp-action="Delete" asp-route-id="@b.Id"
                                             id="btn-delete-cart"
                                                               onclick="return confirm('Are you sure you want to lock this?')"><i class="fa-solid fa-lock"></i> Lock</a>
                                       }
                                       else
                                       {

                                          <a asp-area="Admin" asp-controller="Account" asp-action="Activate" asp-route-id="@b.Id"
                                             id="btn-activate-account" onclick="return confirm('Are you sure you want to unlock this?')"
                                                                        ><i class="fa-solid fa-unlock"></i> Unlock</a>
                                       }
                                    </td>
                                 </tr>
                              }
                           }
                     </table>
                     @* <a asp-action="Create" id="btn-back-book"><i class="fa-solid fa-backward"></i> Back</a> *@
                  </div>

                  @* End table *@
