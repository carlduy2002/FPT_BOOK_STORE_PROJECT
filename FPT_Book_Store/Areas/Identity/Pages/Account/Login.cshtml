@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html>
<head>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='~/css/loginForm.css'>
</head>

<body>
    
    <div class="login-box">
        <h2>Login</h2>
        <form method="POST" id="login">
            @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
          <div class="user-box">
            <input asp-for="Input.Email" required="" type="text">
            <label asp-for="Input.Email"></label>
             <span asp-validation-for="Input.Email" class="text-danger"></span>
          </div>
          <div class="user-box" style="margin-top: 30px">
            <input asp-for="Input.Password" autocomplete="current-password" type="password" required="">
            <label asp-for="Input.Password"></label>
             <span asp-validation-for="Input.Password" class="text-danger"></span>
          </div>
          <a href="#" onclick="document.getElementById('login').submit()">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
             Log in
          </a>
        </form>
      </div>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
